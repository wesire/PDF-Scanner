# PDF Context Narrator Configuration
# Copy this file to .env and customize as needed

# Application Settings
PDF_CN_APP_NAME=pdf-context-narrator
PDF_CN_APP_VERSION=0.1.0
PDF_CN_DEBUG=false

# Data Directories
# Paths can be absolute or relative to the project root
PDF_CN_DATA_DIR=data
PDF_CN_CACHE_DIR=cache
PDF_CN_LOGS_DIR=logs

# Logging Configuration
# Supported levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
PDF_CN_LOG_LEVEL=INFO
PDF_CN_LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
# Optional: specify a log file path
# PDF_CN_LOG_FILE=logs/app.log

# Database Settings (for future use)
# PDF_CN_DATABASE_URL=sqlite:///data/pdf_context_narrator.db

# API Settings (for future use)
# PDF_CN_API_KEY=your-api-key-here
# PDF_CN_API_ENDPOINT=https://api.example.com

# Processing Settings
PDF_CN_MAX_WORKERS=4
PDF_CN_BATCH_SIZE=10
# Optional memory limit in MB (requires psutil)
# PDF_CN_MEMORY_LIMIT_MB=1024
PDF_CN_CHECKPOINT_DIR=checkpoints

# OCR Settings
# Minimum characters per page to be considered as having sufficient text
PDF_CN_OCR_LOW_TEXT_THRESHOLD=50.0
# Maximum number of retry attempts for OCR operations
PDF_CN_OCR_MAX_RETRIES=3
# Delay between OCR retry attempts (in seconds)
PDF_CN_OCR_RETRY_DELAY=1.0
